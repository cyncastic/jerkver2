.artwork-container
  - @artwork.each do |artwork|
    .artwork-holder
      =image_tag artwork.image_url(:large).to_s, alt: artwork.title
      %ul.artwork-details
        %li.artwork-title=  artwork.title
        %li.artwork-size=   Category.find(artwork.category_id).name
        %li.artwork-medium= artwork.medium
        %li.artwork-year=   artwork.year

  - @categories.each do |category| 
    - if category.artworks.any?
      .artwork-conveyor{ 'data-aspectratio': category.name }
        %ul
          - category.artworks.each do |artwork|
            %li
              %a.artwork-link{ href: artwork.image_url(:large).to_s, data: { title: artwork.title, year: artwork.year, medium: artwork.medium }}
                =image_tag artwork.image_url(:thumb).to_s, alt: artwork.title