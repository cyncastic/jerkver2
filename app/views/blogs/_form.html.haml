= form_for(@blog) do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2
        = pluralize(@blog.errors.count, "error")
        prohibited this blog from being saved:
      %ul
        - @blog.errors.full_messages.each do |message|
          %li= message
  %fieldset    

    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :post
      = f.text_area :post
    .field
      = f.label :posted
      = f.date_select :posted
    .field
      = f.label :img
      = f.file_field :img

  .actions
    = link_to 'Back', blogs_path
    = f.submit