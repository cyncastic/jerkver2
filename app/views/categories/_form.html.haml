= form_for(@category) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message


  %fieldset
    .field
      = f.label :width
      = f.text_field :width
    .field
      = f.label :height
      = f.text_field :height
    .field.checkbox
      = f.label :show
      = f.check_box :show

  .actions
    = link_to 'Back', categories_path
    = f.submit