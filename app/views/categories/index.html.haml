%section.admin
  %h1 Listing Categories

  %table
    %tbody
      - @categories.each do |category|
        %tr{class: ("gray" unless category.show?)}
          %td= category.name
          %td.actions
            = link_to 'Edit', edit_category_path(category)
            = link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete'

  .actions
    = link_to 'Back', admin_path
    = link_to 'New Category', new_category_path